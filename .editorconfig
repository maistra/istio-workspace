; http://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
max_line_length = off

[*.{adoc, md}]
trim_trailing_whitespace = false

[{*.go, Makefile}]
indent_style = tab
indent_size = 4
